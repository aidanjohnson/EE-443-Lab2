			.def _stack
            .align 256          ;align delay buffer 256-byte boundary
            .text		        ;code section

_stack:
  			MV    B4,B1	        ;push loop count
  			MV	  B4,A1			;pop loop count
  			MV	  A4,B15
  			MV    A6,A15

push:					        ;push input into stack
            ADD   B15,4,B15
            SUB   B1,1,B1	    ;decrement count
    [B1]    B     push    	    ;branch to loop if count != 0
            NOP   5

pop:
			LDB   *--B15[4],A0
			STB   A0,*A15++[4]
			SUB   A1,1,A1
	[A1]    B     pop
			NOP   5
			B     B3
			NOP   5
